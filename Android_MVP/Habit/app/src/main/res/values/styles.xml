<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">

        <!-- Toolbar Title Color
        <item name="android:textColorPrimary">@android:color/black</item>-->
        <!-- Toolbar Up Button Colo  -->
        <item name="android:textColorSecondary">@color/mainTitle</item>

    </style>

    <style name="AppTheme.Main" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Toolbar.PopupTheme" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="AppTheme.Toolbar.Title" parent="AppTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <!-- 디자인 스타일 추가 -->
    <style name="AppTheme.Main.Title" parent="AppTheme">
        <item name="android:textColor">@color/mainTitle</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="AppTheme.TextView" parent="@android:style/Widget.TextView">
        <item name ="android:textSize">16sp</item>
        <item name ="android:textColor">#222222</item>
    </style>

    <style name="AppTheme.Button" parent="@android:style/Widget.Button">
        <item name ="android:textSize">16sp</item>
        <item name ="android:textColor">#deea8b0c</item>
        <item name ="android:background">@drawable/drawable_button_contained</item>
    </style>
    <style name="AppTheme.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <!--<item name="hintTextAppearance">@style/TextAppearance.Shrine.TextInputLayout.HintText</item>-->

        <item name="android:paddingBottom">8dp</item>
    </style>


</resources>
