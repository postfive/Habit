<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Toolbar Title Color-->
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
        <!-- Toolbar Up Button Colo  -->
        <item name="android:textColorSecondary">@color/mainTitle</item>
        <item name ="android:gravity">center</item>
    </style>

    <style name="AppTheme.Main" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.Toolbar.PopupTheme" parent="ThemeOverlay.AppCompat.Light">
    </style>

    <style name="AppTheme.Toolbar.Title" parent="AppTheme">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="AppTheme.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
    </style>

    <!-- 디자인 스타일 추가 -->

    <style name="AppTheme.TextView" parent="@android:style/Widget.TextView">
        <item name ="android:textSize">16sp</item>
        <item name ="android:textColor">#de000000</item>\
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.EditText" parent="@android:style/Widget.EditText">
        <item name ="android:textSize">20sp</item>
        <item name ="android:textColor">#de000000</item>
        <item name ="android:textColorHint">#999999</item>
        <item name = "android:paddingBottom">18dp</item>
        <item name = "android:paddingLeft">16dp</item>
        <item name = "android:paddingRight">16dp</item>
        <item name = "android:paddingTop">18dp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="AppTheme.HabitActivity.HintTextView" parent="@android:style/Widget.TextView">
        <item name ="android:textSize">12sp</item>
        <item name ="android:textColor">#de999999</item>
    </style>


    <style name="AppTheme.Button.Contained.01" parent="@android:style/Widget.Holo.Button.Borderless">

        <item name ="android:textSize">@dimen/text_size</item>
        <item name ="android:textColor">@drawable/drawable_button_contained_01_text</item>
        <item name ="android:background">@color/buttonContained01</item>
    </style>

    <style name="AppTheme.Button.Contained.02" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name ="android:textSize">@dimen/text_size</item>
        <item name ="android:textColor">@drawable/drawable_button_contained_02_text</item>
        <item name ="android:background">@color/buttonContained02</item>
    </style>
    <style name="AppTheme.Button.Contained.Gray" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name ="android:textSize">@dimen/text_size</item>
        <item name ="android:textColor">@drawable/drawable_button_contained_03_gray_text</item>
        <item name ="android:background">@color/buttonContainedGray</item>
    </style>
    <style name="AppTheme.Button.Outlined" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name ="android:textSize">@dimen/text_size</item>
        <item name ="android:textColor">@drawable/drawable_button_outlined_text</item>
        <item name ="android:background">@drawable/drawable_button_outlined_face</item>
    </style>

    <!--    <style name="AppTheme.Button" parent="AppTheme.Button">

        </style>@android:style/Widget.Button.Toggle">
        -->
    <style name="AppTheme.Button.Toggle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name ="android:textSize">@dimen/text_size</item>
        <item name ="android:textColor">@drawable/drawable_toggle_text</item>
        <item name ="android:background">@drawable/drawable_toggle</item>
    </style>
    <style name="AppTheme.TextInputLayout" parent="Widget.Design.TextInputLayout">
        <!--<item name="hintTextAppearance">@style/TextAppearance.Shrine.TextInputLayout.HintText</item>-->

        <!--<item name="android:paddingBottom">8dp</item>-->

        <item name="android:background">@drawable/drawable_edittext</item>
    </style>

</resources>
