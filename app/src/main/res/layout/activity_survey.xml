    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_left_right"
            android:layout_marginRight="@dimen/layout_left_right"
            android:orientation="vertical">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/ic_chevron_left"/>
            <TextView
                android:id="@+id/textview_survery_main"
                style="@style/AppTheme.TextView.Body.Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="56dp"
                android:text="@string/survery_main" />

            <TextView
                android:id="@+id/textview_question1"
                style="@style/AppTheme.TextView.Body.Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/survery_question1" />

            <ToggleButton
                android:id="@+id/togglebtn_woman"
                style="@style/AppTheme.Button.06.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="onClickGender"
                android:text="@string/woman"
                android:textOff="@string/woman"
                android:textOn="@string/woman" />

            <ToggleButton
                android:id="@+id/togglebtn_man"
                style="@style/AppTheme.Button.06.Toggle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:onClick="onClickGender"
                android:textOff="@string/man"
                android:textOn="@string/man" />

            <TextView
                android:id="@+id/textview_question2"
                style="@style/AppTheme.TextView.Body.Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/survery_question2" />

            <FrameLayout
                style="@style/AppTheme.TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/drawable_spinner">

                <Spinner
                    android:id="@+id/spinner_job"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="18dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="18dp" />
            </FrameLayout>

            <TextView
                android:id="@+id/textview_question3"
                style="@style/AppTheme.TextView.Body.Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="@string/survery_question3" />


            <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
                android:id="@+id/discreteseekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                app:dsb_indicatorColor="#222222"
                app:dsb_indicatorFormatter="%d0ëŒ€"
                app:dsb_max="9"
                app:dsb_min="1"
                app:dsb_progressColor="#222222"
                app:dsb_rippleColor="#e0e0e0"
                app:dsb_scrubberHeight="2dp"
                app:dsb_trackColor="#e0e0e0"
                app:dsb_trackHeight="2dp"/>

            <Button
                style="@style/AppTheme.Button.01.Contained"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="@dimen/layout_top_bottom"
                android:layout_marginTop="40dp"
                android:onClick="onClickSaveSurvey"
                android:text="@string/save" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>