<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/upper_back_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/upperLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:layout_marginLeft="16sp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/goal_statement"
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:text="오늘부터 다이어트!!"
                    android:textColor="#de000000"
                    android:textStyle="bold"
                    android:textSize="24sp"></TextView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_marginBottom="32dp"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/start_day"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="2018.06.01"
                        android:textColor="#de555555"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="~"
                        android:textColor="#de555555"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/end_day"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                         android:text="2018.06.01"
                        android:textColor="#de555555"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f5f5f5"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="24dp"
        android:paddingTop="24dp">

        <Button
            android:id="@+id/prev_tv"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/ic_chevron_left"
            android:clickable="true"></Button>

        <TextView
            android:id="@+id/date_tv"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="empty"
            android:textColor="#de575757"
            android:textSize="16sp"></TextView>

        <Button
            android:id="@+id/next_tv"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_chevron_right"
            android:clickable="true"></Button>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f5f5f5"></android.support.v4.view.ViewPager>
</LinearLayout>