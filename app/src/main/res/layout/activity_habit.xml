<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.habit.HabitActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_habit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.Toolbar"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_habit"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:theme="@style/AppTheme.Toolbar">

            <TextView
                android:id="@+id/textview_habit_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edit_habit"
                style="@style/AppTheme.Toolbar.Title" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"

                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_habit_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="@string/habit_name"
                        android:theme="@style/AppTheme.TextView" />

                    <FrameLayout
                        android:id="@+id/goal_text_input"
                        style="@style/AppTheme.TextInputLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp">

                        <EditText
                            android:id="@+id/edittext_habit_username"
                            style="@style/AppTheme.EditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/drawable_edittext"
                            android:hint="@string/hint_habitname"
                            android:inputType="text"
                            android:maxLines="1"
                            android:maxLength="10"/>

                        <ImageButton
                            android:id="@+id/btn_habit_username_clear"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical|right"
                            android:layout_marginRight="16dp"
                            android:background="@drawable/ic_clear"
                            android:visibility="invisible" />
                    </FrameLayout>

                    <TextView
                        android:id="@+id/textview_habit_username_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:text="@string/error_habit_username"
                        style="@style/AppTheme.HabitActivity.HintTextView"
                        android:visibility="invisible"/>
                    <!--

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/edittext_goal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="@string/hint_habitname"/>
-->


                </LinearLayout>

                <Button
                    android:id="@+id/btn_habit_list"
                    style="@style/AppTheme.Button.Contained.Gray"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="onClickHabitList"
                    android:text="@string/habit_list" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="24dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textview_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/goal"
                        android:theme="@style/AppTheme.TextView" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <FrameLayout
                                style="@style/AppTheme.TextInputLayout"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="3dp"
                                android:layout_weight="1">

                                <EditText
                                    android:id="@+id/edittext_goal"
                                    style="@style/AppTheme.EditText"
                                    android:background="@drawable/drawable_edittext"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:inputType="number|numberDecimal"
                                    android:maxLines="1" />

                                <ImageButton
                                    android:id="@+id/btn_clear_goal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical|right"
                                    android:layout_marginRight="16dp"
                                    android:background="@drawable/ic_clear"
                                    android:visibility="invisible" />
                            </FrameLayout>


                            <TextView
                                android:id="@+id/textview_goal_hint"
                                style="@style/AppTheme.HabitActivity.HintTextView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_weight="1"
                                android:text="@string/error_habit_goal"
                                android:visibility="invisible" />
                        </LinearLayout>

                        <FrameLayout
                            style="@style/AppTheme.TextInputLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:layout_weight="1"
                            android:background="@drawable/drawable_spinner">

                            <Spinner
                                android:id="@+id/spinner_unit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="18dp"
                                android:layout_marginLeft="16dp"
                                android:layout_marginTop="18dp"></Spinner>
                        </FrameLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="24dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tv_alarmday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:text="@string/repetition"
                            android:theme="@style/AppTheme.TextView" />

                        <TextView
                            android:id="@+id/tv_setalarmday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@+id/tv_alarmday"
                            android:text=""
                            android:theme="@style/AppTheme.TextView" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <ToggleButton
                            android:id="@+id/togglebtn_sunday"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/drawable_toggle"
                            android:textColor="@drawable/drawable_toggle_text"
                            android:onClick="onClickDayofWeek"
                            android:padding="2dp"
                            android:textOff="@string/short_sunday"
                            android:textOn="@string/short_sunday"
                            android:textSize="16sp" />

                        <ToggleButton
                            android:id="@+id/togglebtn_monday"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/drawable_toggle"
                            android:textColor="@drawable/drawable_toggle_text"
                            android:onClick="onClickDayofWeek"
                            android:textOff="@string/short_monday"
                            android:textOn="@string/short_monday"
                            android:textSize="16sp"/>

                        <ToggleButton
                            android:id="@+id/togglebtn_tuesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/drawable_toggle"
                            android:textColor="@drawable/drawable_toggle_text"
                            android:onClick="onClickDayofWeek"
                            android:textOff="@string/short_tuesday"
                            android:textOn="@string/short_tuesday"
                            android:textSize="16sp"
                            style="?android:attr/borderlessButtonStyle"/>

                        <ToggleButton
                            android:id="@+id/togglebtn_wednesday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/drawable_toggle"
                            android:textColor="@drawable/drawable_toggle_text"
                            android:onClick="onClickDayofWeek"
                            android:textOff="@string/short_wednesday"
                            android:textOn="@string/short_wednesday"
                            android:textSize="16sp"
                            style="?android:attr/borderlessButtonStyle"/>

                        <ToggleButton
                            android:id="@+id/togglebtn_thursday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/drawable_toggle"
                            android:textColor="@drawable/drawable_toggle_text"
                            android:onClick="onClickDayofWeek"
                            android:textOff="@string/short_thursday"
                            android:textOn="@string/short_thursday"
                            android:textSize="16sp"
                            style="?android:attr/borderlessButtonStyle" />

                        <ToggleButton
                            android:id="@+id/togglebtn_friday"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="8dp"
                            android:layout_weight="1"
                            android:background="@drawable/drawable_toggle"
                            android:textColor="@drawable/drawable_toggle_text"
                            android:onClick="onClickDayofWeek"
                            android:textOff="@string/short_friday"
                            android:textOn="@string/short_friday"
                            android:textSize="16sp"
                            style="?android:attr/borderlessButtonStyle" />

                        <ToggleButton
                            android:id="@+id/togglebtn_saturday"
                            style="?android:attr/borderlessButtonStyle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/drawable_toggle"
                            android:textColor="@drawable/drawable_toggle_text"
                            android:onClick="onClickDayofWeek"
                            android:textOff="@string/short_saturday"
                            android:textOn="@string/short_saturday"
                            android:textSize="16sp"/>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="32dp"
                    android:layout_marginTop="32dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/textview_habit_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginBottom="16dp"
                            android:text="습관 시간"
                            android:theme="@style/AppTheme.TextView" />

                    </RelativeLayout>

                    <ToggleButton
                        android:id="@+id/toggleBtn_all"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/drawable_toggle"
                        android:textColor="@drawable/drawable_toggle_text"
                        android:onClick="onClickTime"
                        android:text="ToggleButton"
                        android:textOff="하루종일"
                        android:textOn="하루종일"
                        android:textSize="16sp"
                        style="?android:attr/borderlessButtonStyle" />

                    <ToggleButton
                        android:id="@+id/toggleBtn_morning"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"

                        android:background="@drawable/drawable_toggle"
                        android:textColor="@drawable/drawable_toggle_text"
                        android:onClick="onClickTime"
                        android:text="ToggleButton"
                        android:textOff="오전"
                        android:textOn="오전"
                        android:textSize="16sp"
                        style="?android:attr/borderlessButtonStyle" />

                    <ToggleButton
                        android:id="@+id/toggleBtn_afternoon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/drawable_toggle"
                        android:textColor="@drawable/drawable_toggle_text"
                        android:onClick="onClickTime"
                        android:text="ToggleButton"
                        android:textOff="오후"
                        android:textOn="오후"
                        android:textSize="16sp"
                        style="?android:attr/borderlessButtonStyle" />

                    <ToggleButton
                        android:id="@+id/toggleBtn_night"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"

                        android:onClick="onClickTime"
                        android:text="ToggleButton"
                        android:textOff="저녁"
                        android:textOn="저녁"
                        android:textSize="16sp"
                        style="@style/AppTheme.Button.Toggle"
                        />
                    <!--style="?android:attr/borderlessButtonStyle"
                    android:background="@drawable/drawable_toggle"
                        android:textColor="@drawable/drawable_toggle_text"
                        -->

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="onClickSaveHabit"

                android:text="@string/save"
                style="@style/AppTheme.Button.Contained.01" />
        </LinearLayout>
    </ScrollView>


</LinearLayout>